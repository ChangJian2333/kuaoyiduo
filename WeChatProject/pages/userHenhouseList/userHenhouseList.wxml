<!--userHenhouseList.wxml-->
<!-- detail.wxml -->
<view class="content">
  <view class="header">
    <view class="header-title">
      <text>快易多蛋鸡养殖记录</text>
    </view>
  </view>  
  <view class="regist-title">
      <view class="regist-title-left" bindtap="clickOnlineHenhouse">查看记录中</view>
      <view class="regist-title-right" bindtap="clickEndHenhouse">查看已淘汰</view>
  </view>
  <view class="placeholder-title">
      <text>点击鸡舍号或者日期，可以查看对应鸡舍的生产性能</text>
  </view>
  <view class="table">
    <view class="tr bg-w">
      <view class="th">鸡舍号</view>
      <view class="th">日期</view>
      <!-- <view class="th">点击修改</view> -->
    </view>
    <block wx:for="{{listData}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td" bindtap="pushToPerformance">{{item.henName}}</view>
        <view class="td" bindtap="pushToPerformance">{{item.recordDate}}</view>
        <!-- <view class="td-link" bindtap="clickCellRecord" data-tag="{{item}}">记录</view> -->
      </view>
      <view class="tr" wx:else>
        <view class="td" bindtap="pushToPerformance">{{item.henName}}</view>
        <view class="td" bindtap="pushToPerformance">{{item.recordDate}}</view>
        <!-- <view class="td-link" bindtap="clickCellRecord" data-tag="{{item}}">记录</view> -->
      </view>
    </block>
  </view>
</view>
