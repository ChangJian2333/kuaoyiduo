<!--historyDetail.wxml-->
<view class="content">
  <view class="header">
    <view class="header-title">
      <text>历史记录表</text>
    </view>
  </view>  
  <view class="table">
    <view class="tr bg-g">
      <view class="td">舍号</view>
      <view class="td">上鸡日期</view>
    </view>
    <view class="tr">
      <view class="td">{{henName}}</view>
      <view class="td">{{response.startDate}}</view>
    </view>
    <view class="tr bg-g">
      <view class="td">累计支出（元）</view>
      <view class="td">累计收入（元）</view>
    </view>
    <view class="tr">
      <view class="td">{{response.totalpay}}</view>
      <view class="td">{{response.totalearn}}</view>
    </view>
    <view class="tr bg-g">
      <view class="td">累计喂料量（斤）</view>
      <view class="td">累计产蛋量（斤）</view>
    </view>
    <view class="tr">
      <view class="td">{{response.totalforageWeight}}</view>
      <view class="td">{{response.totaleggWeight}}</view>
    </view>
    <view class="tr bg-g">
      <view class="td">近10天的蛋料比</view>
      <view class="td">日龄130以后的料蛋比</view>
    </view>
    <view class="tr">
      <view class="td">{{response.henhouseNumber}}</view>
      <view class="td">{{response.time}}</view>
    </view>
  </view>
  <view class="advertisement">
      <image class="userinfo-avatar" src="../image/conver.png" background-size="cover"></image>
  </view>
</view>