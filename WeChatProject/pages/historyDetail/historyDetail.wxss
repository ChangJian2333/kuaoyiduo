.content {
  border: 0px solid darkgray;
}

.header {
  margin-left: 0px;
  margin-right: 0px;
  margin-top: 0px;
}

.header-title {
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  height: 30px;
  text-align: center;
}
.advertisement {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  margin-bottom: 20px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
   background: #09bb07; 
}

.table {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 60px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
  font-size: 17px;
}
.td {
    width:50%;
    justify-content: center;
    text-align: center;
    font-size: 17px;
}

.td-link {
    width:50%;
    justify-content: center;
    text-align: center;
    color: #09bb07;
    font-size: 17px;
}

.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 50%;
  justify-content: center;
  background: #09bb07;
  color: #fff;
  display: flex;
  height: 40px;
  align-items: center;
}