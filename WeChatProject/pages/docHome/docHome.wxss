/* pages/docHome/docHome.wxss */

.section {
  width: 100%;
  height: 100px;
  /* display: flex; */
  bottom: 50px;
  position: fixed;
}

.btn_area {
  width: 320rpx;
  margin-bottom: 20px;
  border-radius: 40px;
  font-size: 12px;
  text-align: center;
}

.preview_back {
  height: 100%;
  background: blue;
}

.preview_image {
  background-color: red;
}

.preview_section {
  height: 50px;
  background-color: black;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.preview_item {
  width: 25%;
  height: 40px;
  font-size: 14px;
  color: white;
  flex-direction: row;
  text-align: center;
}

.preview_moveview {
  width: 50px;
  height: 50px;
  background-color: yellow;
}

.rotateRight {
  transform: rotate(90deg);
}

.canvas{
  width: 100%;
  height: 100%;
}