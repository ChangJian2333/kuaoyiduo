/* detail.wxss */

 /* 字体控制 */
.td,.td-link{
  font-size: 16px;
}

.th,.th-link{
  font-size: 17px;
  justify-content: center;
  background: #09bb07;
  color: #fff;
  display: flex;
  height: 35px;
  align-items: center;
}
/* 内容布局 */
.content {
  /* border: 0px solid darkgray; */
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 10px;
}

.header {
  margin-left: 0px;
  margin-right: 0px;
  margin-top: 0px;
}

.header-title {
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  height: 30px;
  text-align: center;
}
.placeholder-title {
  margin-left: 10px;
  margin-right: 10px;
  margin-top:10px;
  font-size: 14px;
}
.regist-title {
  margin-left: 10px;
  margin-right: 10px;
  margin-top:60px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
}

.regist-title-left {
  width: 45%;
  height: 50px;
  background: #09bb07;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-right: 5%;
}

.regist-title-right {
  width: 45%;
  height: 50px;
  background: #09bb07;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-left: 5%;
}

.table {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  margin-bottom: 20px;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 35px;
  align-items: center;
}
.td {
    width:30%;
    justify-content: center;
    text-align: center;
}

.td-link {
    width:20%;
    justify-content: center;
    text-align: center;
    color: #09bb07;
}

.bg-w{
  background: #09bb07;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 30%;
}
.th-link {
  width: 20%;
}